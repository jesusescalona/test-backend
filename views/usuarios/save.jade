extends ../layout
block content
  h1 Guardar usuario
  form(method="post", action="#{action}")
    -if(put)
      input(type="hidden", name="_method", value="PUT")
    label Nombre
    br
    input(type="text", name="name", required="required", value="#{usuario.name}")
    br
    label Género
    br
    input(type="text", name="gender", required="required", value="#{usuario.gender}")
    br
    label Compañía
    br
    input(type="text", name="company", required="required", value="#{usuario.company}")
    br
    label Email
    br
    input(type="text", name="email", required="required", value="#{usuario.email}")
    br
    label Teléfono
    br
    input(type="text", name="phone", required="required", value="#{usuario.phone}")
    br
    label Dirección
    br
    textarea(name="address", cols="50", rows="5", required="required") #{usuario.address}
    br
    input(type="submit", value="Guardar")
    a(href="/usuarios") Cancelar